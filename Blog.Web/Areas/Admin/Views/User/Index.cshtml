@model List<UserDto>

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcılar
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-4" asp-area="Admin" asp-controller="User" asp-action="Add">
                Kullanıcı Ekle <i class="bx bx-plus"></i>
            </a>
            <table class="table table-bordered" id="usersTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Rol</th>
                        <th>Email Doğrulaması</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Rol</th>
                        <th>Email Doğrulaması</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                <tbody class="table-border-bottom-0">
                        @foreach (var user in Model)
                        {
                        <tr name="@user.Id">
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Role</td>
                            <td>@(user.EmailConfirmed ? "Doğrulandı" : "Doğrulanmadı")</td>
                            <td>@user.AccessFailedCount</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-categoryId="@user.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-categoryId="@user.Id" onclick="return confirm('Silmek istediğinden emin misin?')"><i class="bx bx-minus-circle"></i></a>
                                <script>
                                    function clicked(e) {
                                        if (!confirm('Silmek istediğinden emin misin?')) {
                                            e.preventDefault();
                                        }
                                    }
                                </script>
                                <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
                                <link rel="stylesheet" href="~/web/alertify.min.js" />
                                <script src="~/js/site.js" asp-append-version="true"></script>
                            </td>
                        </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

</div>

@section Scripts {
    <script src="~/js/userIndex.js" type="application/ecmascript"></script>
}